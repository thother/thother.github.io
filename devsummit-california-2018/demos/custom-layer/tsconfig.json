{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "lib": [
      "dom",
      "es5",
      "es2015.iterable",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "scripthost"
    ],
    "module": "amd",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "types": ["chai", "webgl2"],
    "paths": {
      "maquette-query/*": ["node_modules/maquette-query/dist/*"]
    }
  },
  "include": [
    "*",
    "typings/tsd.d.ts"
  ]
}
